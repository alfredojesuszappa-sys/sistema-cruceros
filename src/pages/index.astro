---
import MainLayout from '../layouts/main.astro';
import { MainApp } from '../components/MainApp';
---

<MainLayout>
  <!-- Mensaje visible ANTES de que React se cargue -->
  <div id="loading-message" style="
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, #1e3a5f 0%, #2c5282 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    color: white;
    font-family: sans-serif;
  ">
    <div style="text-align: center;">
      <div style="
        width: 60px;
        height: 60px;
        border: 4px solid rgba(255,255,255,0.3);
        border-top-color: white;
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin: 0 auto 20px;
      "></div>
      <h2 style="font-size: 24px; margin: 0 0 10px 0;">Cargando Sistema de Cruceros...</h2>
      <p style="margin: 0; opacity: 0.8;">Inicializando componentes</p>
    </div>
  </div>
  
  <style>
    @keyframes spin {
      to { transform: rotate(360deg); }
    }
  </style>
  
  <MainApp client:only="react" />
</MainLayout>

<script>
  console.log('üìÑ index.astro - Sistema de Cruceros Oce√°nicos');
  
  // Ocultar mensaje de carga cuando React se monte
  window.addEventListener('DOMContentLoaded', () => {
    setTimeout(() => {
      const loadingMsg = document.getElementById('loading-message');
      if (loadingMsg) {
        console.log('‚úÖ React hydration detectada, ocultando mensaje de carga');
        loadingMsg.style.display = 'none';
      }
    }, 2000); // Dar 2 segundos para que React se monte
  });
  
  // Log de errores
  window.addEventListener('error', (e) => {
    console.error('‚ùå Error detectado:', e.message, e.filename, e.lineno);
  });
</script>
